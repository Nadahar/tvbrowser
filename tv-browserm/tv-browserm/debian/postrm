#!/bin/sh
# postrm script for tv-browserm
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	;;
	purge|remove)	
	#killall -9 tv-browserm
	test -f /home/user/MyDocs/tv-browserm && rm -f /home/user/MyDocs/tv-browserm 
	test -f /opt/tv-browserm/tv-browserm && rm -f /opt/tv-browserm/tv-browserm
	test -f /usr/share/pixmaps/tvbrowser64.png && rm -f /usr/share/pixmaps/tvbrowser64.png
	test -f /usr/share/applications/hildon/tv-browserm.desktop && rm -f /usr/share/applications/hildon/tv-browserm.desktop
	test -f /usr/share/applications/hildon-home/tv-browserm.desktop && rm -f /usr/share/applications/hildon-home/tv-browserm.desktop
	;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac 


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


